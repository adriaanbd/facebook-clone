<%= form_with scope: :comment, url: profile_post_comments_path(current_user.username, post_id) do |f| %>
  <div class="form-group">
    <%= f.text_field :message, placeholder: "Pitch in, don't be a stranger...", 
                              class: 'form-control', cols: 100 %>
  </div>
  <div class="form-group">
    <%= f.submit 'Comment', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>