<%= form_with scope: :post, url: profile_post_path(current_user.username, post.id), method: 'put' do |f| %>
  <div class="form-group">
    <%= f.text_area :message, class: 'form-control', cols: 100 %>
  </div>
  <div class="form-group">
    <%= f.submit 'Update Post', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>