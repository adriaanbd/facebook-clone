<%= form_with scope: :post, url: profile_posts_path(current_user.username) do |f| %>
  <div class="form-group">
    <%= f.text_area :message, placeholder: "What's on your mind?", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>