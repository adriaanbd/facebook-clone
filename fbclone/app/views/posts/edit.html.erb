<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="card mb-3 bg-light">
      <h6 class="card-header">Edit Post</h6>
      <div class="card-body d-flex">
        <div class="mr-2">
          <%= gravatar_for(current_user, 'post-img img-fluid gravatar-wrap') %>
        </div>
        <div class="d-flex">
          <%= render 'posts/partials/edit_form', post: @post %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>