<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
      <div class="col">
        <%= f.text_field :first_name,  autocomplete: "first_name", class:"form-control", placeholder: "First name" %>
      </div>
      <div class="col">
        <%= f.text_field :last_name, autocomplete: "last_name", class:"form-control", placeholder: "Last name"  %>
      </div>
  </div>
  <div class="form-group row px-3">
    <%= f.email_field :email, autocomplete: "email", class:"form-control", placeholder: "Email"  %>
  </div>  
  <div class="form-group row px-3">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:"form-control", placeholder: "New Password" %>
  </div>
  <div class="form-group row px-3">
    <%= f.label :birth_date, "Birthday", class:"h6 text-muted" %>
    <%= f.date_field :birth_date, class:"form-control" %>
  </div>
  <div class="h6 text-muted">Gender</div>
  <div class="form-group row px-3">
    <div class="form-check form-check-inline">
      <%= f.radio_button :gender, 'male', class:"form-check-input" %>
      <%= f.label :gender, 'Male', class: "gender-labels" %><br />
    </div>
    <div class="form-check form-check-inline">
      <%= f.radio_button :gender, 'female', class:"form-check-input" %>
      <%= f.label :gender, 'Female', class: "gender-labels" %><br />
    </div>
    <div class="form-check form-check-inline">
      <%= f.radio_button :gender, 'neutral', class:"form-check-input" %>
      <%= f.label :gender, 'Neutral', class: "gender-labels" %><br />
    </div>
  </div>
  <div>
    <p id="terms">
      By clicking Sign Up, you agree to our Terms, Data Policy and Cookies Policy. You may receive SMS Notifications from us and can opt out any time.
    </p>
  </div>
  <%= f.submit "Sign up", class: "btn btn-success" %>
<% end %>