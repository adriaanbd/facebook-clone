<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="card-bg-light border">
			<h1 class="card-header border-bottom">
				Your Notifications
			</h1>
			<div class="card-body d-flex flex-column">
				<% @notifications.each do |notification| %>
					<% if notification != @notifications.last %>
				<div class="row d-flex">
						<%= render 'single', notification: notification %>
				</div>
				<div class="row border-bottom my-2"></div>
					<% else %>
				<div class="row d-flex">
						<%= render 'single', notification: notification %>
				</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-2"></div>
</div>
