<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="card mb-3 bg-light">
      <h6 class="card-header">Create Post</h6>
      <div class="card-body d-flex">
        <div class="mr-2">
          <%= gravatar_for(current_user, 'post-img img-fluid gravatar-wrap') %>
        </div>
        <div class="d-flex">
          <%= render 'posts/partials/form' %>
        </div>
      </div>
    </div>
    <% if @posts %>
      <% @posts.each do |post| %>
        <%= render 'posts/partials/posts', post: post %>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>