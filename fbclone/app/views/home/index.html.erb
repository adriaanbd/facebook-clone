<div class="row pt-0 mt-0">
  <div class="col-md-12">
    <div class="card">
      <h6 class="card-header">Create Post</h6>
      <div class="card-body d-flex">
        <div class="mr-2 post-img">
          <%= gravatar_for(current_user, 'post-img img-fluid') %>
        </div>
        <div class="ml-2 d-flex">
          <%= render 'posts/partials/form' %>
        </div>
      </div>
    </div>
    <% if current_user.home_posts %>
      <% current_user.home_posts.each do |p| %>
    <div class="card">
      <div class="card-body d-flex flex-column">
        <div class="post-owner">
          <%= p.user.full_name %>
        </div>
        <div class="post-message">
          <%= p.message %>
        </div>
      </div>
    </div>
      <% end %>
    <% end %>
  </div>
</div>