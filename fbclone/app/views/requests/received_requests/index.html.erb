<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="card requests bg-light w-100">
      <div class="card-head d-flex justify-content-between align-items-center">
        <h2 class="my-2 pl-3 text-muted">Respond to Friend Requests</h2>
        <%= link_to 'View sent requests', requests_sent_requests_path, class: 'request-link mr-4' %>
      </div>
      <div class="card-body">
        <% @requesters.each do |requester| %>
          <% @request = FriendRequest.where(["requester_id = ? and requestee_id = ?", requester.id, current_user.id]).pluck(:id).first %>
          <%= render 'requests/received_requests/single_request', user: requester, request: @request %>
          <% if requester != @requesters.last %>
            <hr class="my-3">
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>
